@{
}
@{
    ViewData["Title"] = "Upload File";
}
<h2>Upload File</h2>

<form asp-action="Upload" asp-controller="File" method="post" enctype="multipart/form-data">
    <input type="file" name="file" required />
    <button type="submit">Upload</button>
</form>

<p>@ViewBag.Message</p>

<h2>Gửi File</h2>
<form asp-action="SendFile" asp-controller="File" method="post">
    <input type="text" name="fileName" placeholder="Tên file" required />
    <input type="text" name="ip" placeholder="IP nhận" required />
    <input type="number" name="port" placeholder="Cổng" required />
    <button type="submit">Gửi</button>
</form>
